#!/bin/sh

. dblocks-theme
fetchDiskUsage() {
    result=$(df $1 | awk 'NR==2 {printf "%2.1fG / %2.1fG", ($3 / 1024 / 1024), ($4 / 1024 / 1024)}')
    percentUsed=$(df $1 | awk -F'[^0-9]*' 'NR==2 {print $5}')
    [ $percentUsed -le 10 ] && color=color2
    display "${result}" $color
}

echo " $(display ïŸ‰) $(fetchDiskUsage /)"
